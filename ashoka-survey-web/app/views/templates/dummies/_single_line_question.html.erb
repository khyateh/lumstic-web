<surveyquestion class="question-row" id="{{id}}">
  <span class="question-container">
    <div class="questionWrp">
      <span>
        {{question_number}})
      </span>
      <input type="text" name="content" value="{{content}}"/>
      <abbr name="mandatory" title="required" style="display:none;">
        *
      </abbr>
      <abbr name="identifier" title="required" style="display:none;">
      	&#9406;
        </abbr>
    </div>
    {{#finalized}}
    <%= render "templates/dummies/finalized_icon" %>
    {{/finalized}}
    {{^finalized}}
    <span class="form-top-right-actions">
      <a data-tooltip="Delete" href="javascript:void(0)" class="delete_question">
      </a>
      <a data-tooltip="Copy" href="{{duplicate_url}}" class="copy_question" data-method="post"></a>
      <div  class="ref_img" data-tooltip="Help image" >

        <%= render "templates/questions/file_upload" %>
      </div>
      <div class="settingOptionsWrp">
        
        <a href="#" class="setting" data-tooltip="Settings"><img alt="Settings"  src="/assets/settings.svg"></a>

        <div class="setting-options">
          <%= render "templates/questions/identifier" %>
          <%= render "templates/questions/private" %>
          <div class="checkbox">
            {{#mandatory}}
            <input type="checkbox" name="mandatory" value="{{mandatory}}" checked id="mandatory{{id}}" class="regular-checkbox" />
            {{/mandatory}}
            {{^mandatory}}
            <input type="checkbox" name="mandatory" value="{{mandatory}}" id="mandatory{{id}}" class="regular-checkbox"/>
            {{/mandatory}}
            <label for="mandatory{{id}}"></label>
            <span>
              <%= t("activerecord.attributes.question.mandatory") %>
            </span>
          </div>
        </div>
      </div>
    </span>
    {{/finalized}}
  </span>
  <div class="children-content">
    <div class="inline_errors">
      {{errors}}
    </div>
    <img src="{{image.thumb.url}}" class="thumb" />
    <div>
    </div>
    <div class="no-of-characters">
      <label><%= t("activerecord.attributes.question.max_length") %>
      </label>
      <input type="number" name="max_length" value="{{max_length}}"/>
    </div>
    <%= render "templates/questions/question_finalized_message" %>
  </div>
